//
// organisms/_newsletter
// ============================================================================
.newsletter
  display block
  padding 30px 0
  background-color $color-secundary

  &-title
    $uppercase()
    margin 0
    padding 10px 0

    font-size 18px
    color $color-white

  &-form
    .form-group
      width 100%

      +above($screen-sm)
        width calc('100% - 110px')

    input,
    button
      height 40px
      box-shadow none
      border-radius 7px

    input
      width 100% !important
      border 1px solid $color-white

      &:focus
        outline none
        box-shadow none
        border-color $color-primary

    button
      $uppercase()
      width 100%
      border-color $color-primary
      background-color $color-primary

      +above($screen-sm)
        width 100px
